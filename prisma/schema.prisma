generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Photo {
  id        String   @id @default(cuid())
  imageUrl  String
  tags      String[]
  createdAt DateTime @default(now())
  userId    String
  isLocked  Boolean  @default(false) 
}

model UserSetting {
  id       String @id @default(cuid())
  userId   String @unique
  pinHash  String
}